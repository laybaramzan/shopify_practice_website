<div class="w-full py-6 px-3">
  <div class="border bg-white shadow-lg rounded-lg overflow-hidden">
    {% comment %} product url {% endcomment %}
    <a href="{{ product.url }}">
      {% comment %} if product exist then display otherwise placeholder                     {% endcomment %}
      {% if product.featured_image %}
        <div class="h-80 overflow-hidden">
          <img
            class="w-full h-full object-cover transition duration-1000 ease-in-out hover:scale-105 transform"
            height=""
            width=""
            src="{{ product.featured_image|image_url }}"
          >
        </div>
      {% else %}
        {{ 'product-1' | placeholder_svg_tag: 'w-full h-full object-cover bg-gray-100' }}
      {% endif -%}
    </a>
    <div class="flex flex-col p-4">
      {% comment %} product vendor,title,price {% endcomment %}
      <span class="text-sm text-gray-400">{{ product.vendor }}</span>
      <a class="text-gray-700 font-medium uppercase" href="product.url">{{ product.title }}</a>
      <p class="text-gray-500">{{ product.price | money }}</p>
    </div>
  </div>
</div>
