<div class=" flex flex-col items-center my-8">
  <h1 class=" text-3xl font-medium my-8 md:my-16">{{ section.settings.title }}</h1>
  {% form 'contact' %}
    {% if form.errors %}
      <div class="border p-5">
          <div class="flex flex-row items-center w-full my-3">
              <div class="text-red-500">
                  {% render 'icon-failed' %}
              </div>
              <div class="text-sm font-medium ml-3">
                  Oh no! Your comment was not posted
              </div>
          </div>
          <ul class="px-4 mb-3 ml-7 list-decimal">
              {% for error in form.errors %}
                  <li>
                      <span>{{ form.errors.messages[error] }}</span>
                  </li>
              {% endfor %}
          </ul>
      </div>
  {% elsif form.posted_successfully? %}
      <div class="flex flex-row items-center w-full my-3 p-5">
          <div class="text-green-500">
              {% render 'icon-success' %}
          </div>
          <div class="text-sm font-medium ml-3">Comment is posted successfully</div>
      </div>
  {% endif %}
    <div class="max-w-6xl mx-auto px-4 flex-1 items-center justify-center">
      <div class="flex px-1 mb-3">
        <div class="px-3 md:w-1/2">
          <label for="contact_name" class="uppercase font-medium text-xs text-gray-500">Name</label>
          <input class="border py-3 px-4 mb-3 text-gray-700 w-full" type="text" name="contact[name]" id="contact_name">
        </div>
        <div class="px-3 md:w-1/2">
          <label for="contact_email" class="uppercase font-medium text-xs text-gray-500">Email</label>
          <input
            class="border py-3 px-4 mb-3 text-gray-700 w-full"
            type="email"
            name="contact[email]"
            id="contact_email"
          >
        </div>
      </div>
      <div class="flex px-1 mb-3">
        <div class="w-full px-3">
          <label for="contact_message" class="uppercase font-medium text-xs text-gray-500">Message</label>
          <textarea
            class="border py-3 px-4 mb-3 text-gray-700 w-full"
            name="contact[body]"
            id="contact_message"
          ></textarea>
          <input
            class="w-full cursor-pointer px-4 py-2 border text-white text-base font-medium bg-gray-900 hover:bg-gray-700"
            type="submit"
            value="submit Message"
          >
        </div>
      </div>
    </div>
  {% endform %}
</div>
{% schema %}
{
  "name": "Contact Form",
  "settings": [
    {
      "type": "text",
      "id": "title",
      "label": "Title",
      "default":"Contact Us"
    }
  ],
  "presets": [
    {
      "name": "Contact Form"
    }
  ]
}
{% endschema %}
